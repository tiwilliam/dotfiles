[user]
	name = NAME
	email = EMAIL

[alias]
    co = checkout
    up = !git pull --rebase
    count = !git shortlog -sn
    hist = !git log --graph --pretty=format:'%Cred%h%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue) <%an>%Creset' --abbrev-commit

[color]
    diff = auto
    status = auto
    branch = auto

[core]
    excludesfile = ~/.gitignore
    editor = vim
